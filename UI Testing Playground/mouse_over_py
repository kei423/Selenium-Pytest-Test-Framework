from selenium import webdriver
from selenium.webdriver.chrome.service import Service
from selenium.webdriver.chrome.options import Options
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from selenium.webdriver import ActionChains

url = "https://uitestingplayground.com/mouseover"

chrome_options = Options()
chrome_options.add_argument("--ignore-certificate-errors")
chrome_options.add_argument("--allow-running-insecure-content")

service = Service(executable_path="chromedriver.exe")
driver = webdriver.Chrome(service=service, options=chrome_options)

driver.get(url)

WebDriverWait(driver, 10).until(
    EC.visibility_of_element_located((By.XPATH, "//h3[text()='Mouse Over']"))
)

link1 = driver.find_element(By.LINK_TEXT, "Click me")
ActionChains(driver).move_to_element(link1).perform()
link1 = driver.find_element(By.LINK_TEXT, "Click me")
link1.click()

link1_click_count = driver.find_element(By.ID, "clickCount")
print("Link 1 clicked " + link1_click_count.text + " time(s)")

link2 = driver.find_element(By.LINK_TEXT, "Link Button")
ActionChains(driver).move_to_element(link2).perform()
link2 = driver.find_element(By.LINK_TEXT, "Link Button")
link2.click()

link2_click_count = driver.find_element(By.ID, "clickButtonCount")
print("Link 2 clicked " + link2_click_count.text + " time(s)")

driver.quit()